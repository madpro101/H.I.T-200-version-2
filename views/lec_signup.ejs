                        <form id="reg_form" action='http://localhost:8014/admin_reg' method='post'>

                            <h6 class="black-text"><b>Name</b></h6>

                            <div class="input-field black-text">

                                <i class="material-icons prefix">account_circle</i>

                                <input type="text" id="FullName" name="FullName" placeholder="Tinashe Madivani"

                                    required="required" class="black-text">

                                <label class="black-text " for=""></label>

                            </div>

                            <h6 class="black-text"><b>Employee_no</b></h6>

                            <div class="input-field  black-text">

                                <i class="material-icons prefix">account_circle</i>

                                <input type="text" id="Employee_no" name="Employee_no" placeholder="H123" required="required"class="black-text">

                                <label class="black-text " for="Registration Number"></label> 

                            </div>

                            <!-- <div class="input-field black-text">

                                <i class="material-icons prefix">account_circle</i> <input type="input" id="FullName"

